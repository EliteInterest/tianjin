<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/check_result_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:minHeight="150dp"
                android:visibility="visible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="企业门头："
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"/>

            <me.iwf.photopicker.widget.MultiPickResultView
                android:id="@+id/mprv_qymt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </me.iwf.photopicker.widget.MultiPickResultView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="营业执照："
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"/>

            <me.iwf.photopicker.widget.MultiPickResultView
                android:id="@+id/mprv_yyzz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </me.iwf.photopicker.widget.MultiPickResultView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="任务图片："
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"/>

            <me.iwf.photopicker.widget.MultiPickResultView
                android:id="@+id/mprv_mytask"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </me.iwf.photopicker.widget.MultiPickResultView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:text="检查图片："
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"/>

            <me.iwf.photopicker.widget.MultiPickResultView
                android:id="@+id/mprv_mytask1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

            </me.iwf.photopicker.widget.MultiPickResultView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:text="隐患图片："
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"/>

            <me.iwf.photopicker.widget.MultiPickResultView
                android:id="@+id/mprv_mytask2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

            </me.iwf.photopicker.widget.MultiPickResultView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:text="整改图片："
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"/>

            <me.iwf.photopicker.widget.MultiPickResultView
                android:id="@+id/mprv_mytask3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

            </me.iwf.photopicker.widget.MultiPickResultView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom_mytask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_supervise_equipment"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@mipmap/equipment"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="特种设备坐标纠正"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:visibility="gone"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="检查结论"
                    android:textSize="@dimen/text_size_normal"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radio_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="有发现违法违规行为"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radio_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未发现违法违规行为"/>
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/et_supervise_task_check_excuteOpinion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/home_ll_bg"
                        android:gravity="top"
                        android:hint="请输入处理说明..."
                        android:maxHeight="100dp"
                        android:padding="10dp"
                        android:textColor="@color/gray"
                        android:textSize="14sp"/>


                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_location_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_location_refresh"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="查看/添加定位"
                android:textColor="@color/light_blue"
                android:textSize="14sp"
                android:visibility="gone"/>
        </LinearLayout>


        <Button
            android:id="@+id/btn_supervise_check_excute"
            style="@style/MyButtonStyle"
            android:text="提交"
            android:visibility="visible"/>
    </LinearLayout>


</LinearLayout>
