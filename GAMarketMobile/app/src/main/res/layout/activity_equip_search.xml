<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zx.gamarketmobile.ui.equipment.EquipSearchActivity">

    <LinearLayout
        android:id="@+id/ll_equip_searchview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="使用单位:"/>

            <EditText
                android:id="@+id/et_equip_sydw"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/home_ll_bg"
                android:hint="请输入使用单位"
                android:maxLength="30"
                android:paddingLeft="10dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="设备类别:"/>

            <Spinner
                android:id="@+id/sp_equip_sblb"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/home_ll_bg"
                android:hint="请输入使用单位"
                android:maxLength="30"
                android:paddingLeft="10dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="出厂编号:"/>

            <EditText
                android:id="@+id/et_equip_ccbh"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/home_ll_bg"
                android:hint="请输入出厂编号"
                android:maxLength="30"
                android:paddingLeft="10dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="使用状态:"/>

            <Spinner
                android:id="@+id/sp_equip_syzt"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/home_ll_bg"
                android:hint="请输入使用状态"
                android:maxLength="30"
                android:paddingLeft="10dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="设备地址:"/>

            <EditText
                android:id="@+id/et_equip_sbdz"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/home_ll_bg"
                android:hint="请输入设备地址"
                android:maxLength="30"
                android:paddingLeft="10dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="38dp"
                android:gravity="center"
                android:text="出厂日期:"/>

            <TextView
                android:id="@+id/tv_equip_qsrq"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/home_ll_bg"
                android:gravity="center"
                android:hint="起始日期"
                android:maxLength="30"
                android:paddingLeft="10dp"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="到"/>

            <TextView
                android:id="@+id/tv_equip_jzrq"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/home_ll_bg"
                android:gravity="center"
                android:hint="截止日期"
                android:maxLength="30"
                android:paddingLeft="10dp"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="区          域:"/>

            <Spinner
                android:id="@+id/sp_equip_qy"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/home_ll_bg"
                android:hint="请输入区域"
                android:maxLength="30"
                android:paddingLeft="10dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="维保单位:"/>

            <EditText
                android:id="@+id/et_equip_wbdw"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/home_ll_bg"
                android:hint="请输入维保单位"
                android:maxLength="30"
                android:paddingLeft="10dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_equip_search"
            style="@style/MyButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查        询"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_equip_switch"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_equip_switch_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/equip_close"/>

        <TextView
            android:id="@+id/tv_equip_switch_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收起搜索栏"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lightgrey"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_equip"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:layout_weight="1"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_equip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>


    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
